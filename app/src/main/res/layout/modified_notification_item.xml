<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/light_gray"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/user_report_modified_time"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_report_modified_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Update status of report 2022 22 :222"
            android:textColor="@color/verydark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_report_modified_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            android:maxLines="@integer/material_motion_duration_long_2"
            android:text="Your report with 2022 22 02 has change status to verified" />

    </LinearLayout>

    <TextView
        android:id="@+id/user_report_modified_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:text="1h"
        android:textAlignment="center"
        android:textSize="14sp" />

</RelativeLayout>