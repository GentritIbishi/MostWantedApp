<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".update.UpdatePerson">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgPerson_update"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_person"></ImageView>

        <EditText
            android:id="@+id/et_person_fullName_update"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgPerson_update"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="@string/full_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/et_person_address_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_person_fullName_update"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="@string/address"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/et_person_age_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_person_address_update"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="@string/select_a_age"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/et_person_height_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_person_age_update"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:hint="@string/select_a_height"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/et_person_weight_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_person_height_update"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:hint="@string/select_a_weight"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/et_person_eyeColor_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_person_weight_update"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:hint="@string/select_a_eye_color"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/et_person_hairColor_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_person_eyeColor_update"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:hint="@string/select_a_hair_color"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/et_person_phy_appearance_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_person_hairColor_update"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="@string/select_a_physical_appearance"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/et_person_acts_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_person_phy_appearance_update"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:hint="@string/select_a_type_of_crime"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/et_person_status_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_person_acts_update"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:hint="@string/select_the_status"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"></EditText>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_person_status_update"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/location_rounded_corners_state"
            android:padding="15dp">

            <ImageView
                android:id="@+id/img_send_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_send_location_person" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_height="match_parent"
            android:layout_width="75dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>

</androidx.core.widget.NestedScrollView>