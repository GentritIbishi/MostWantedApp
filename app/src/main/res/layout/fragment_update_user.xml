                            android:textColorHint="@color/gray"
                            android:textDirection="firstStrong"
                            android:textStyle="bold"
                            app:boxBackgroundColor="@color/light_gray"
                            app:layout_constraintEnd_toEndOf="@+id/autocomplete_update_user_balance_layout"
                            app:layout_constraintStart_toStartOf="@+id/autocomplete_update_user_balance_layout"
