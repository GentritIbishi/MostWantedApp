                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/constraintField"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/update_user_btnSaveChanges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/admin_et_email_account"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/button"
                            android:text="@string/save_changes"
                            android:textColor="@color/white" />

                        <ProgressBar
                            android:id="@+id/update_user_saveChangesProgressBar"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="16dp"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="@+id/update_user_btnSaveChanges"
                            app:layout_constraintTop_toTopOf="@+id/update_user_btnSaveChanges" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

