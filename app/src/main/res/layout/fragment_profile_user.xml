<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_profile"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".fragment.user.ProfileFragment">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/user_profile_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_nav_header_image_view"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_profile_picture_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/user_nav_header_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/user_nav_header_image_view"
                    android:fontFamily="@font/open_sans_light"
                    android:text="@string/your_name"
                    android:textColor="@color/verydark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/user_nav_header_image_view"
                    app:layout_constraintStart_toStartOf="@+id/user_nav_header_image_view"
                    app:layout_constraintTop_toBottomOf="@+id/user_verifiedBadge" />

                <ImageView
                    android:id="@+id/user_verifiedBadge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/user_nav_header_name"
                    android:src="@drawable/ic_verified_badge"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@+id/user_nav_header_image_view"
                    app:layout_constraintStart_toStartOf="@+id/user_nav_header_image_view"
                    app:layout_constraintTop_toBottomOf="@+id/user_nav_header_image_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>