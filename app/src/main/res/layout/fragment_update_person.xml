                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="none"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/text"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/autocomplete_update_person_height_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:hint="@string/select_a_height"
                            android:textColorHint="@color/text"
                            android:textDirection="firstStrong"
                            android:textStyle="bold"
                            app:boxBackgroundColor="@color/edit_text"
                            app:layout_constraintEnd_toEndOf="@+id/autocomplete_update_person_hair_color_layout"
                            app:layout_constraintStart_toStartOf="@+id/autocomplete_update_person_hair_color_layout"
                            app:layout_constraintTop_toBottomOf="@+id/autocomplete_update_person_hair_color_layout">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/update_person_et_height_autocomplete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="none"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/text"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/autocomplete_update_person_weight_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:hint="@string/select_a_weight"
                            android:textColorHint="@color/text"
                            android:textDirection="firstStrong"
                            android:textStyle="bold"
                            app:boxBackgroundColor="@color/edit_text"
                            app:layout_constraintEnd_toEndOf="@+id/autocomplete_update_person_height_layout"
                            app:layout_constraintStart_toStartOf="@+id/autocomplete_update_person_height_layout"
                            app:layout_constraintTop_toBottomOf="@+id/autocomplete_update_person_height_layout">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/update_person_et_weight_autocomplete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="none"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/text"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/autocomplete_update_person_phy_appearance_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:hint="@string/select_a_physical_appearance"
                            android:textColorHint="@color/text"
                            android:textDirection="firstStrong"
                            android:textStyle="bold"
                            app:boxBackgroundColor="@color/edit_text"
                            app:layout_constraintEnd_toEndOf="@+id/autocomplete_update_person_weight_layout"
                            app:layout_constraintStart_toStartOf="@+id/autocomplete_update_person_weight_layout"
                            app:layout_constraintTop_toBottomOf="@+id/autocomplete_update_person_weight_layout">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/update_person_et_phy_appearance_autocomplete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="none"
                                android:paddingTop="16dp"
