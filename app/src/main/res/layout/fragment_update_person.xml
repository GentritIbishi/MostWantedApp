                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:fontFamily="@font/open_sans_bold"
                                android:imeOptions="actionNext"
                                android:inputType="textCapSentences"
                                android:textColor="@color/text"
                                android:textColorHint="@color/text"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/update_person_et_birthdayLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:hint="@string/birthday"
                            android:textColorHint="@color/text"
                            android:textDirection="firstStrong"
                            app:boxBackgroundColor="@color/edit_text"
                            app:helperTextTextColor="@color/text"
                            app:boxStrokeColor="@color/text"
                            android:elevation="6dp"
                            app:hintTextColor="@color/text"
                            app:startIconDrawable="@drawable/ic_baseline_date_range_24"
                            app:endIconMode="clear_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/update_person_et_fullNameLayout" >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/update_person_et_birthday"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/text"
                                android:imeOptions="actionNext"
                                android:text="DD-MM-YYYY"
                                android:ems="10"
                                android:textColorHint="@color/text"
                                android:inputType="date"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/autocomplete_update_person_et_gender_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:hint="@string/select_the_gender"
                            android:textColorHint="@color/text"
                            android:textDirection="firstStrong"
                            android:textStyle="bold"
                            app:boxBackgroundColor="@color/edit_text"
                            app:layout_constraintEnd_toEndOf="@+id/update_person_et_birthdayLayout"
                            app:layout_constraintStart_toStartOf="@+id/update_person_et_birthdayLayout"
                            app:layout_constraintTop_toBottomOf="@+id/update_person_et_birthdayLayout">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/update_person_et_gender_autocomplete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="none"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/text"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/update_person_etAddressLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:elevation="6dp"
                            android:hint="@string/address"
                            android:textColorHint="@color/text"
                            android:textDirection="firstStrong"
                            app:boxBackgroundColor="@color/edit_text"
                            app:boxStrokeColor="@color/text"
                            app:endIconMode="clear_text"
                            app:helperTextTextColor="@color/text"
                            app:hintTextColor="@color/text"
                            app:layout_constraintBottom_toTopOf="@+id/autocomplete_update_person_et_gender_layout"
                            app:layout_constraintEnd_toEndOf="@+id/autocomplete_update_person_et_gender_layout"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/autocomplete_update_person_et_gender_layout"
                            app:layout_constraintTop_toBottomOf="@+id/autocomplete_update_person_et_gender_layout"
                            app:layout_constraintVertical_bias="0.0"
                            app:startIconDrawable="@drawable/ic_baseline_map_24">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/update_person_etAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:fontFamily="@font/open_sans_bold"
                                android:imeOptions="actionNext"
                                android:inputType="textPostalAddress"
                                android:textColor="@color/text"
                                android:textColorHint="@color/text"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/autocomplete_update_person_age_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:hint="@string/select_a_age"
                            android:textColorHint="@color/text"
                            android:textDirection="firstStrong"
                            android:textStyle="bold"
                            app:boxBackgroundColor="@color/edit_text"
                            app:layout_constraintEnd_toEndOf="@+id/update_person_etAddressLayout"
                            app:layout_constraintStart_toStartOf="@+id/update_person_etAddressLayout"
                            app:layout_constraintTop_toBottomOf="@+id/update_person_etAddressLayout">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/update_person_et_age_autocomplete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="none"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/text"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/autocomplete_update_person_eye_color_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:hint="@string/select_a_eye_color"
                            android:textColorHint="@color/text"
                            android:textDirection="firstStrong"
                            android:textStyle="bold"
                            app:boxBackgroundColor="@color/edit_text"
                            app:layout_constraintEnd_toEndOf="@+id/autocomplete_update_person_age_layout"
                            app:layout_constraintStart_toStartOf="@+id/autocomplete_update_person_age_layout"
                            app:layout_constraintTop_toBottomOf="@+id/autocomplete_update_person_age_layout">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/update_person_et_eye_color_autocomplete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="none"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/text"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/autocomplete_update_person_hair_color_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
