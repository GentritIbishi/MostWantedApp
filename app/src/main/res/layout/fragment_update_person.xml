                            android:textColorHint="@color/text"
                            android:textDirection="firstStrong"
                            android:textStyle="bold"
                            app:boxBackgroundColor="@color/edit_text"
                            app:layout_constraintEnd_toEndOf="@+id/autocomplete_update_person_eye_color_layout"
                            app:layout_constraintStart_toStartOf="@+id/autocomplete_update_person_eye_color_layout"
                            app:layout_constraintTop_toBottomOf="@+id/autocomplete_update_person_eye_color_layout">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/update_person_et_hair_color_autocomplete"
