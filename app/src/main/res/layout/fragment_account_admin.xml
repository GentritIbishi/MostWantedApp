<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".fragment.admin.AccountFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/admin_swipeToRefreshProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/admin_tvMyAccount"
                    android:background="@drawable/report_persistent_bg"
                    android:elevation="6dp"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/admin_tvProfilePictureTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_toRightOf="@id/imageOfProfile"
                        android:fontFamily="@font/open_sans_bold"
                        android:padding="16dp"
                        android:text="@string/profile_picture"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/admin_tvProfilePictureTxt"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="15dp"
                        android:layout_toRightOf="@id/admin_imageOfProfile">

                        <Button
                            android:id="@+id/admin_btnUploadNewPicture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/admin_tvProfilePictureTxt"
                            android:layout_toRightOf="@id/admin_imageOfProfile"
                            android:background="@drawable/button"
                            android:padding="10dp"
                            android:text="@string/upload_new"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/admin_btnDeletePhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/admin_tvProfilePictureTxt"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="15dp"
                            android:layout_toRightOf="@id/admin_btnUploadNewPicture"
                            android:background="@drawable/button"
                            android:padding="10dp"
                            android:text="@string/delete"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/admin_imageOfProfile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_below="@+id/admin_tvMyAccount"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/ic_profile_picture_default" />

                    <TextView
                        android:id="@+id/admin_tvFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/admin_imageOfProfile"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:padding="10dp"
                        android:text="@string/first_name"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/admin_et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/admin_tvFirstName"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/input_bg_white"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/admin_tvParentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/admin_et_first_name"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:padding="10dp"
                        android:text="@string/parent_name_account"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/admin_et_parent_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/admin_tvParentName"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/input_bg_white"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:text="Parent Name" />

                    <TextView
                        android:id="@+id/admin_tvLastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/admin_et_parent_name"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:padding="10dp"
                        android:text="@string/last_name"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/admin_et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/admin_tvLastName"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/input_bg_white"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:text="Last Name" />

                    <TextView
                        android:id="@+id/admin_tvAddressAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/admin_et_last_name"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:padding="10dp"
                        android:text="@string/address_account"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/admin_et_address_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/admin_tvAddressAccount"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/input_bg_white"
                        android:inputType="textPostalAddress"
                        android:padding="16dp"
                        android:text="Address" />

                    <TextView
                        android:id="@+id/admin_tvPersonalNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/admin_et_address_account"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:padding="10dp"
                        android:text="@string/personal_number_account"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/admin_et_personal_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/admin_tvPersonalNumber"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/input_bg_white"
                        android:inputType="number"
                        android:padding="16dp"
                        android:text="1234567890" />

                    <TextView
                        android:id="@+id/admin_tvPhoneNumberAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/admin_et_personal_number"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:padding="10dp"
                        android:text="@string/phone_number_account"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/admin_et_phone_number_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/admin_tvPhoneNumberAccount"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/input_bg_white"
                        android:inputType="phone"
                        android:padding="16dp"
                        android:text="+38344XXXXXX" />


                    <TextView
                        android:id="@+id/admin_tvEmailAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/admin_et_phone_number_account"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:padding="10dp"
                        android:text="@string/email_account"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/admin_et_email_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/admin_tvEmailAccount"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/input_bg_white"
                        android:inputType="textEmailAddress"
                        android:padding="16dp"
                        android:text="example@example.com" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/admin_et_email_account">

                        <Button
                            android:id="@+id/admin_btnSaveChanges"
                            android:layout_below="@+id/admin_et_email_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:text="@string/save_changes"
                            android:textColor="@color/white"
                            android:background="@drawable/button"/>

                        <ProgressBar
                            android:id="@+id/admin_saveChangesProgressBar"
                            style="?android:attr/progressBarStyle"
                            android:visibility="invisible"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="@+id/admin_btnSaveChanges"
                            app:layout_constraintTop_toTopOf="@+id/admin_btnSaveChanges" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ProgressBar
                        android:id="@+id/admin_acc_uploadProgressBar"
                        style="?android:attr/progressBarStyle"
                        android:visibility="gone"
                        android:layout_width="25dp"
                        android:layout_height="28dp"
                        android:layout_alignStart="@+id/admin_imageOfProfile"
                        android:layout_alignTop="@+id/admin_imageOfProfile"
                        android:layout_alignEnd="@+id/admin_imageOfProfile"
                        android:layout_alignBottom="@+id/admin_imageOfProfile"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="29dp"
                        android:layout_marginEnd="27dp"
                        android:layout_marginBottom="23dp" />
                </RelativeLayout>


            </RelativeLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>