<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:elevation="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_profile_picture_default" />

    <TextView
        android:id="@+id/nav_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/nav_header_image_view"
        android:fontFamily="@font/open_sans_light"
        android:text="Gentrit (Shaip) Ibishi"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/verifiedBadge"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/nav_header_name"
        android:src="@drawable/ic_verified_badge"
        android:visibility="invisible" />

</RelativeLayout>