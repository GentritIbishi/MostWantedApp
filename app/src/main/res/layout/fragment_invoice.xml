<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".fragment.admin.InvoiceFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_weight="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:theme="@style/Theme.MaterialComponents.Light"
            android:layout_marginTop="5dp"
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/autocomplete_invoice_status_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="48dp"
                android:hint="@string/status"
                android:textColorHint="@color/gray"
                android:textDirection="firstStrong"
                android:textStyle="bold"
                app:boxBackgroundColor="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/auto_complete_invoice_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="test"
                    android:textColor="@color/gray"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_invoice_transaction_id_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:textColorHint="@color/gray"
                app:counterOverflowTextColor="@color/white"
                app:helperTextTextColor="@color/white"
                android:textDirection="firstStrong"
                android:textStyle="bold"
                app:boxBackgroundColor="@color/light_gray"
                android:hint="@string/column_transaction_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/autocomplete_invoice_status_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_invoice_transaction_id"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_invoice_created_date_time_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:textColorHint="@color/gray"
                app:counterOverflowTextColor="@color/white"
                app:helperTextTextColor="@color/white"
                android:textDirection="firstStrong"
                android:textStyle="bold"
                app:boxBackgroundColor="@color/light_gray"
                android:hint="@string/column_created_date_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_invoice_transaction_id_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_invoice_created_date_time"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_invoice_account_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:textColorHint="@color/gray"
                app:counterOverflowTextColor="@color/white"
                app:helperTextTextColor="@color/white"
                android:textDirection="firstStrong"
                android:textStyle="bold"
                app:boxBackgroundColor="@color/light_gray"
                android:hint="@string/column_name_account"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_invoice_created_date_time_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_invoice_account"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_invoice_amount_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:textColorHint="@color/gray"
                app:counterOverflowTextColor="@color/white"
                app:helperTextTextColor="@color/white"
                android:textDirection="firstStrong"
                android:textStyle="bold"
                app:boxBackgroundColor="@color/light_gray"
                android:hint="@string/column_name_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_invoice_account_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_invoice_amount"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_invoice_userId_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:hint="@string/user_id"
                android:textColorHint="@color/gray"
                android:textDirection="firstStrong"
                android:textStyle="bold"
                app:boxBackgroundColor="@color/light_gray"
                app:counterOverflowTextColor="@color/white"
                app:helperTextTextColor="@color/white"
                app:layout_constraintBottom_toBottomOf="et_invoice_amount_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_invoice_amount_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_invoice_userId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/gray"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_invoice_updated_date_time_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:hint="@string/update_date_time"
                android:textColorHint="@color/gray"
                android:textDirection="firstStrong"
                android:textStyle="bold"
                app:boxBackgroundColor="@color/light_gray"
                app:counterOverflowTextColor="@color/white"
                app:helperTextTextColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_invoice_userId_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_invoice_updated_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/gray"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnSaveinvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:background="@drawable/button_rectangle"
                android:drawableLeft="@drawable/ic_check"
                android:paddingLeft="20dp"
                android:text="@string/save_changes"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_invoice_updated_date_time_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>