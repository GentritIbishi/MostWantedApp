<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/payment_information">

        <EditTextPreference
            app:key="full_name_payment_information"
            app:icon="@drawable/ic_person_bank_information"
            app:title="@string/full_name_payment_information"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="address_payment_information"
            app:icon="@drawable/ic_address_bank_information"
            app:title="@string/address_payment_information"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="bank_account_payment_information"
            app:icon="@drawable/ic_bank_account_payment_information"
            app:title="@string/bank_name_payment_information"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="account_number_payment_information"
            app:icon="@drawable/ic_payment_information"
            app:title="@string/account_number_payment_information"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="paypal_email_payment_information"
            app:icon="@drawable/ic_paypal"
            app:title="@string/your_paypal_email"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue=""
            app:entries="@array/payment_methods"
            app:entryValues="@array/payment_values"
            app:key="payment_method"
            app:icon="@drawable/ic_baseline_attach_money_24"
            app:title="@string/payment_method"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notifications">
        <SwitchPreferenceCompat
            app:key="allowNotification"
            android:defaultValue="true"
            app:icon="@drawable/ic_settings_notification"
            app:title="@string/allow_notification" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/appearance">

        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:icon="@drawable/ic_baseline_dark_mode_24"
            app:title="@string/dark_mode" />

        <SwitchPreferenceCompat
            app:key="system_mode"
            app:icon="@drawable/ic_system_mode"
            app:title="@string/system_mode" />

        <SwitchPreferenceCompat
            app:key="light_mode"
            app:icon="@drawable/ic_baseline_light_mode_24"
            app:title="@string/light_mode"/>

    </PreferenceCategory>

</PreferenceScreen>